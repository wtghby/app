<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_menu_back"
    android:orientation="vertical" >

    <com.umell.admin.view.MenuItemView
        android:id="@+id/consume_qrcode"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/menu_item_height"
        android:layout_marginTop="@dimen/menu_item_padding_max_top"
        app:menuItemLeftDrawable="@drawable/ic_profile_nickname_normal"
        app:menuItemText="@string/consume_qrcode" />

    <com.umell.admin.view.MenuItemView
        android:id="@+id/consume_by_name"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/menu_item_height"
        android:layout_marginTop="@dimen/menu_item_padding_max_top"
        app:menuItemLeftDrawable="@drawable/ic_profile_nickname_normal"
        app:menuItemText="@string/consume_by_name" />

    <com.umell.admin.view.MenuItemView
        android:id="@+id/consume_by_tel"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/menu_item_height"
        android:layout_marginTop="@dimen/menu_item_padding_min_top"
        app:menuItemLeftDrawable="@drawable/ic_profile_nickname_normal"
        app:menuItemText="@string/consume_by_tel" />

    <com.umell.admin.view.MenuItemView
        android:id="@+id/consume_by_id"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/menu_item_height"
        android:layout_marginTop="@dimen/menu_item_padding_min_top"
        app:menuItemLeftDrawable="@drawable/ic_profile_nickname_normal"
        app:menuItemText="@string/consume_by_id" />

</LinearLayout>